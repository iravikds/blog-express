<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>

  <div class="container">
    <h2 class="m-2">All Blogs</h2>

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="card m-2">
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <h6 class="card-subtitle"><%= blog.snippet %></h6>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
    
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>